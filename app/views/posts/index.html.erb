<h1>Posts</h1><p>Write a <%= link_to "New Post", new_post_path(@post) %></p>

<ul>
    <% @posts.each do |post| %>
        <li> <%= post.headline %> <br>
             <%= post.content %> <br>
            by <strong> <%= post.user.username %> </strong>
	     <%= link_to "More info", post_path(post) %>  |  <%= link_to "Comment", new_post_comment_path(post) %>
        </li>
    <% end %>
</ul>
