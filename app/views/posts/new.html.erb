<div class="container">
    <h1>Add a new post!</h1>

    <%= form_for @post do |f| %>

        <div>
            <%= f.label :headline %>
            <%= f.text_field :headline %>
        </div>

        <div>
            <%= f.label :content %>
            <%= f.text_area :content, size: "30x1" %>
        </div>

        <div>
            <%= f.label :occured %>
            <%= f.text_field :occured %>
        </div>

        <div>
            <%= f.label :performer_website %>
            <%= f.text_field :performer_website %>
        </div>

        <div>
            <%= f.label :performer_info %>
            <%= f.text_field :performer_info %>
        </div>

        <div>
            <%= f.label :category_id %>
            <%= f.collection_select(:category_id, @category, :id, :name) %>
        </div>

        <div>
            <%= f.label :image %>
            <%= f.text_field :image %>
        </div>

        <%= f.submit "Submit" %>

    <% end %>

    <%= link_to "Back to the list!", posts_path %>
</div>
