<h1>Add a new comment!</h1>

<%= form_for @comment do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :roast %>
        <%= f.text_field :roast %>
    </div>

    <div>
        <%= f.label :origin %>
        <%= f.text_field :origin %>
    </div>

    <div>
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
    </div>

    <%= f.submit "Add new comment!" %>

<% end %>

<%= link_to "Back to the list!", comments_path %>
